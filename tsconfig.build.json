{
  "compilerOptions": {
    "lib": ["ESNext"],
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "files": ["types/eslint-plugin-jest-extended.d.ts", "types/global.d.ts"],
  "include": ["src", "types"],
  "exclude": ["dist", "node_modules"]
}
