{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["ESNext"],
    "module": "nodenext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true
  },
  "files": [
    "./.husky/install.ts",
    "./eslint.config.ts",
    "types/eslint-plugin-jest-extended.d.ts",
    "types/global.d.ts"
  ],
  "include": ["src", "./.husky/", "types"],
  "exclude": ["dist", "node_modules"]
}
